---
import Header from '../components/Header.astro';
import { Textarea } from '../components/Textarea';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Dir Maker</title>
  </head>
  <body class="grid place-content-center">
    <Header />
    <div class="container py-4 mx-auto md:py-8">
      <div class="">
        <h1
          class="text-center mb-4 text-6xl font-extrabold leading-none tracking-tight text-gray-900"
        >
          Dir Maker
        </h1>
        <p
          class="mb-6 md:text-lg font-normal text-gray-500 lg:text-xl px-8 md:px-48"
        >
          Please input the plain text of your directory structure into the
          provided textarea.
          <br />
          By adding a space at the beginning of the text, the formatted directory
          structure will be displayed in the adjacent textarea!
        </p>
      </div>
      <div class="flex flex-col w-full gap-8">
        <Textarea client:only="react" />
      </div>
    </div>
  </body>
</html>
